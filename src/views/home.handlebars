
            <div class="container text-center">
            <div class="row justify-content-md-center">
                <h3>List all Products</h3>
                
                <div class="col-1">
                    <label for="limit" class="col-form-label">Rows/Page</label>
                </div>
                <div class="col-1">
                    <select id="limit" class="form-select form-select-sm" aria-label="">
                    <option value="5" >5</option>
                    <option value="10" selected>10</option>
                    <option value="20">20</option>
                    <option value="30">30</option>
                    <option value="50">50</option>
                    </select>
                </div>      
                <div class="col-1">
                    <label for="category" class="col-form-label">Category</label>
                </div>
                <div class="col-1">
                    <select id="category" class="form-select form-select-sm" aria-label="">
                    <option value="All" selected>All</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    </select>
                </div>                         
                <div class="col-1">
                    <label for="orderBy" class="col-form-label">Order By</label>
                </div>
                <div class="col-2">
                    <select id="orderBy" class="form-select form-select-sm" aria-label="Small select example">
                    <option value="1" selected>Without Order</option>
                    <option value="2">Higher Price</option>
                    <option value="3">Lower Price</option>
                    </select>
                </div>   
                <div class="col-3">
                    <input type="submit" onClick="myFunction()"/> 
                {{!--     <a href="/api/products?page={{session.home.page}}&limit={{session.home.limit}}&sort={{sort}}">Recargar</a> --}}
{{!--                     <a href="{{href}}" class="btn btn-select" role="button">Link Button</a> --}}
                </div>                   

                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Code</th>
                            <th scope="col">Title</th>
                            <th scope="col">Description</th>
                            <th scope="col">Category</th>
                            <th scope="col">Price</th>
                            <th scope="col">stock</th>
                            <th scope="col">Active</th>

                        </tr>
                    </thead>
                    <tbody class="prod_list">
                        {{#each payloads}}
                            <tr>
                                <td>{{this.code}}</td>
                                <td>{{this.title}}</td>
                                <td>{{this.description}}</td>
                                <td>{{this.category}}</td>
                                <td>{{this.price}}</td>
                                <td>{{this.stock}}</td>
                                <td>{{this.status}}</td>
                            </tr>                          
                        {{/each}}
                    </tbody>
                </table>

                {{#if hasPrevPage}}
                <a href="/api/products?page={{prevPage}},limit={{limit}}">Anterior</a>
                {{/if}}

                <span>Page {{currentPage}} of {{totalPages}}</span>

                {{#if hasNextPage}}
                <a href="/api/products?page={{nextPage}},limit={{limit}}">Siguiente</a>
                {{/if}}


<script>

    let limit = 10
    let category = 'All'
    let orderBy = 1
    let page = 1
    let sort = null
    let ref = ''

    const pagesObj = document.getElementById('limit')
    pagesObj.addEventListener('change', function () {
        limit = document.getElementById("limit").value
        ref = `/api/products?page=${page}&limit=${limit}&sort=${sort}&category=${category}`
        console.log('limit1',ref)
    });

    const categoryObj = document.getElementById('category')
    categoryObj.addEventListener('change', function () {
        category = document.getElementById("category").value
                ref = `/api/products?page=${page}&limit=${limit}&sort=${sort}&category=${category}`
        console.log('category1',ref)
    });

    const orderByObj = document.getElementById('orderBy')
    orderByObj.addEventListener('change', function () {
        console.log('entroooo')
        orderBy = document.getElementById("orderBy").value
        console.log('orderBy',orderBy)
        switch (orderBy) {
            case '1':
             sort = ''
              break
            case '2':
              sort = 'sort: {price: -1}}'
              break
            case '3':
               sort = 'sort: {price: 1}}'
               break
        }
                ref = `/api/products?page=${page}&limit=${limit}&sort=${sort}&category=${category}`
        console.log('sort',ref)
    });

      function myFunction() {
        window.location.href=`${ref}` 
      }

  </script>





    

