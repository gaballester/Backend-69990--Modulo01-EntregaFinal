
            <div class="container text-center">
            <div class="row justify-content-md-center">
                <h3>List all Products</h3>
                
                <div class="col-1">
                    <label for="pageNbr" class="col-form-label">Rows/Page</label>
                </div>
                <div class="col-1">
                    <select id="pageNbr" class="form-select form-select-sm" aria-label="">
                    <option value="10" selected>10</option>
                    <option value="20">20</option>
                    <option value="30">30</option>
                    <option value="50">50</option>
                    </select>
                </div>      
                <div class="col-1">
                    <label for="category" class="col-form-label">Category</label>
                </div>
                <div class="col-1">
                    <select id="category" class="form-select form-select-sm" aria-label="">
                    <option value="All" selected>All</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    </select>
                </div>                         
                <div class="col-1">
                    <label for="orderBy" class="col-form-label">Order By</label>
                </div>
                <div class="col-2">
                    <select id="orderBy" class="form-select form-select-sm" aria-label="Small select example">
                    <option value="1" selected>Without Order</option>
                    <option value="2">Higher Price</option>
                    <option value="3">Lower Price</option>
                    </select>
                </div>   
                <div class="col-3">
                    <button type="button" id="btn-select" class="btn btn-outline-primary btn-sm">Apply Selection</button>
                    <button type="button" id="btn-unselect"class="btn btn-outline-danger btn-sm">Clear Selection</button>
                </div>                   

                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Code</th>
                            <th scope="col">Title</th>
                            <th scope="col">Description</th>
                            <th scope="col">Category</th>
                            <th scope="col">Price</th>
                            <th scope="col">stock</th>
                            <th scope="col">Active</th>

                        </tr>
                    </thead>
                    <tbody class="prod_list">
                        {{#each payloads}}
                            <tr>
                                <td>{{this.code}}</td>
                                <td>{{this.title}}</td>
                                <td>{{this.description}}</td>
                                <td>{{this.category}}</td>
                                <td>{{this.price}}</td>
                                <td>{{this.stock}}</td>
                                <td>{{this.status}}</td>
                            </tr>                          
                        {{/each}}
                    </tbody>
                </table>
                            {{#if hasPrevPage}}
                <a href="/api/products?page={{prevPage}}">Anterior</a>
            {{/if}}
            {{#if hasNextPage}}
                <a href="/api/products?page={{nextPage}}">Siguiente</a>
            {{/if}}       
            <p> {{currentPage}} de {{totalPages}}</p>   
